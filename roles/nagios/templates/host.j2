# group=fep
{% for host in groups['fep'] %}
define host{
	use		linux-box
	host_name	{{ hostvars[host]['ansible_hostname'] }}
	hostgroups	device,linux,nrpe,fep
	_publicaddress	{{ hostvars[host]['public_ip'] }}
}
{% endfor %}

